<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_partly_cloudy_day"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        >

        <Button
            android:id="@+id/titleBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@drawable/ic_home"
            android:gravity="top" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="天气预报"
            android:textColor="#fff"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="上海市"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="19℃"
            android:textColor="#fff"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/forecast"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:gravity="center"
            android:text="五日预报"
            android:textColor="#fff"
            android:textSize="24sp" />



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:id="@+id/date"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="2023.04.14"
                android:textColor="#fff"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/cloudy"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_partly_cloud_day"
                />

            <TextView
                android:id="@+id/duoyun"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="多云"
                android:textColor="#fff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/temperature1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="14~23℃"
                android:textColor="#fff"
                android:textSize="24sp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:id="@+id/date1"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="2023.04.15"
                android:textColor="#fff"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/sunny"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_clear_day" />

            <TextView
                android:id="@+id/qing"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="晴"
                android:textColor="#fff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/temperature2"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="17~25℃"
                android:textColor="#fff"
                android:textSize="24sp" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:id="@+id/date2"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="2023.04.16"
                android:textColor="#fff"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/sunny1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_clear_day"
                />

            <TextView
                android:id="@+id/qing1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="晴"
                android:textColor="#fff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/temperature3"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="17~27℃"
                android:textColor="#fff"
                android:textSize="24sp" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:id="@+id/date3"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="2023.04.17"
                android:textColor="#fff"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/rain"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_light_rain"
                />

            <TextView
                android:id="@+id/xiaoyu"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="下雨"
                android:textColor="#fff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/temperature4"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="18~29℃"
                android:textColor="#fff"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:id="@+id/date4"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="2023.04.18"
                android:textColor="#fff"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/rain1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_light_rain"
                />

            <TextView
                android:id="@+id/xiaoyu1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="下雨"
                android:textColor="#fff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/temperature5"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="16~24℃"
                android:textColor="#fff"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>